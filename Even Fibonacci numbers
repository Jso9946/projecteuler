#include <iostream>
#include <string>
using namespace std;


int fibonacci(int n) {

int fib1 = 1;
int fib2 = 2;


int sum = 0;

for (int i = 0; i < n; i++) { 

int fibcurrent = fib1 + fib2;
fib1 = fib2;
fib2 = fibcurrent;

if (fibcurrent % 2 ==0) {

sum += fibcurrent;

}

if (fibcurrent > 4000000) {
break;} }

return sum;}

int main() {

int n = 100;

cout << fibonacci(100) << endl;

return 0;

}

